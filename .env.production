# Production Environment Variables for Backend
NODE_ENV=production
PORT=3000

# Database Configuration (PostgreSQL)
# You'll need to set these in Vercel Environment Variables
DB_HOST=your_postgres_host
DB_PORT=5432
DB_NAME=kanban_crm
DB_USER=your_postgres_user
DB_PASSWORD=your_postgres_password

# Alternative: Use DATABASE_URL for providers like Vercel Postgres, Neon, or Supabase
# DATABASE_URL=postgresql://user:password@host:port/database

# Security
JWT_SECRET=your_super_secure_jwt_secret_here_change_this_in_production
WEBHOOK_SECRET=your_webhook_secret_change_in_production
API_RATE_LIMIT=100

# Redis Configuration (for caching)
# Use Vercel KV or external Redis provider like Upstash
REDIS_URL=redis://your_redis_url

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Default Admin Account
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com
DEFAULT_ADMIN_API_KEY=your_secure_api_key_change_immediately

# CORS Configuration
FRONTEND_URL=https://your-frontend-app.vercel.app