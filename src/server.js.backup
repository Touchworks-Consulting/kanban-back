const CronJobService = require('./services/CronJobService');
const AutomationService = require('./services/AutomationService');

const app = express();
const PORT = process.env.PORT || 3000;

// âœ¨ Sistema de Rate Limiting EscalÃ¡vel para Centenas de UsuÃ¡rios SimultÃ¢neos
// Baseado em usuÃ¡rio autenticado, nÃ£o por IP
// Suporta 500+ usuÃ¡rios com milhares de requisiÃ§Ãµes por minuto

// Middleware
app.use(helmet()); // Security headers
app.use(compression()); // Compress responses
app.use(cors({
  origin: process.env.NODE_ENV === 'production' 
    ? ['https://yourdomain.com'] // Configure your frontend domain
    : true,
  credentials: true
}));
app.use(morgan(process.env.NODE_ENV === 'production' ? 'combined' : 'dev'));
app.use(express.json({ limit: '10mb' }));
app.use(express.urlencoded({ extended: true, limit: '10mb' }));

// ðŸ“Š Sistema de Monitoramento (desabilitado temporariamente)
// app.use(monitor()); // Monitoramento geral de requisiÃ§Ãµes
// app.use(rateLimitMonitor()); // Monitoramento especÃ­fico de rate limiting
// âœ… Rate Limiting (temporariamente desabilitado para debug)
