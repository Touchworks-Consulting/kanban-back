{
  "name": "leads-crm-backend",
  "version": "1.0.0",
  "description": "Sistema de gestão de leads (CRM) com API REST, kanban boards, dashboard e relatórios",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint src/",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "setup": "node scripts/setup-windows.bat",
    "setup:unix": "bash scripts/setup-unix.sh",
    "db:up": "docker-compose up -d postgres redis",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down && docker volume rm kanban-touch_postgres_data && docker-compose up -d postgres redis && npm run migrate && npm run seed",
    "cache:up": "docker-compose up -d redis",
    "cache:down": "docker-compose stop redis"
  },
  "keywords": [
    "crm",
    "leads",
    "kanban",
    "dashboard",
    "webhooks",
    "nodejs",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.4",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.8.2",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.9",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
